#Inicializa as variaveis de contagem
pares = 0
impares = 0

#Loop para ler os numeros e contar os pares e impares
while True:
numero = int(input("Digite um numero inteiro ((0 para sair):"))

if numero == 0:
    break

if numero %2 == 0:
pares + = 1 

impares += 1

#Exibe o resultado
print(f"Quantidade de numeros pares:{pares}")
print(f"Quantidade de numeros impares:{impares}")
